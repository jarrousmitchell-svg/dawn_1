{% doc %}
  @prompt
    NOVA WRITTEN IN ITALICS SHOWING VARIETY OF COMMONLY PURCHASED PRODUCTS
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-nova-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-nova-showcase-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-nova-showcase-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.spacing_below_title }}px;
  }

  .ai-nova-showcase-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-style: italic;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.spacing_below_nova }}px;
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-transform: uppercase;
  }

  .ai-nova-showcase-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    font-weight: 400;
  }

  .ai-nova-showcase-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ block.settings.min_card_width }}px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.spacing_above_products }}px;
  }

  .ai-nova-showcase-product-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-nova-showcase-product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 1.5 }});
  }

  .ai-nova-showcase-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: {{ block.settings.spacing_below_image }}px;
  }

  .ai-nova-showcase-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: {{ block.settings.spacing_below_image }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-nova-showcase-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-nova-showcase-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: {{ block.settings.product_title_weight }};
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.spacing_below_title }}px;
    line-height: 1.3;
  }

  .ai-nova-showcase-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 600;
    margin-bottom: {{ block.settings.spacing_below_price }}px;
  }

  .ai-nova-showcase-product-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .ai-nova-showcase-product-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-1px);
  }

  .ai-nova-showcase-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-nova-showcase-empty-state-title-{{ ai_gen_id }} {
    font-size: 24px;
    margin-bottom: 12px;
    color: #333;
  }

  .ai-nova-showcase-empty-state-text-{{ ai_gen_id }} {
    font-size: 16px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-nova-showcase-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-nova-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax({{ block.settings.min_card_width | times: 0.8 }}px, 1fr));
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-nova-showcase-product-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-nova-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-nova-showcase-container-{{ ai_gen_id }}">
    <div class="ai-nova-showcase-header-{{ ai_gen_id }}">
      <h2 class="ai-nova-showcase-title-{{ ai_gen_id }}">{{ block.settings.nova_text }}</h2>
      {% if block.settings.subtitle != blank %}
        <p class="ai-nova-showcase-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    {% assign has_products = false %}
    {% for i in (1..8) %}
      {% assign product_key = 'product_' | append: i %}
      {% if block.settings[product_key] != blank %}
        {% assign has_products = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_products %}
      <div class="ai-nova-showcase-grid-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% assign product_key = 'product_' | append: i %}
          {% assign product = block.settings[product_key] %}
          
          {% if product != blank %}
            <div class="ai-nova-showcase-product-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-nova-showcase-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-nova-showcase-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              <h3 class="ai-nova-showcase-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              
              <div class="ai-nova-showcase-product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; opacity: 0.7; margin-right: 8px;">{{ product.compare_at_price | money }}</span>
                {% endif %}
                {{ product.price | money }}
              </div>

              <a href="{{ product.url }}" class="ai-nova-showcase-product-link-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-nova-showcase-empty-state-{{ ai_gen_id }}">
        <h3 class="ai-nova-showcase-empty-state-title-{{ ai_gen_id }}">Showcase Your Products</h3>
        <p class="ai-nova-showcase-empty-state-text-{{ ai_gen_id }}">
          Add up to 8 commonly purchased products to display below your NOVA branding.<br>
          Start by selecting your first product in the block settings.
        </p>
      </div>
    {% endif %}
  </div>
</div>

