{% doc %}
  @prompt
    a hero banner
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.height_desktop }}px;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_gradient != blank %}
      background: {{ block.settings.background_gradient }};
    {% endif %}
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ settings.page_width }}px;
    width: 100%;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: calc({{ block.settings.heading_size }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    line-height: 1.2;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-subheading-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc({{ block.settings.subheading_size }}px * {{ settings.body_scale | divided_by: 100.0 }});
    line-height: 1.4;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-text-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc({{ block.settings.text_size }}px * {{ settings.body_scale | divided_by: 100.0 }});
    line-height: 1.5;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
    flex-wrap: wrap;
  }

  .ai-hero-banner-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc(16px * {{ settings.body_scale | divided_by: 100.0 }});
    text-decoration: none;
    border: {{ settings.buttons_border_thickness }}px solid;
    border-radius: {{ settings.buttons_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    min-height: 44px;
    {% if settings.buttons_shadow_opacity > 0 %}
      box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba({{ settings.color_schemes.scheme-1.settings.shadow | color_extract: 'red' }}, {{ settings.color_schemes.scheme-1.settings.shadow | color_extract: 'green' }}, {{ settings.color_schemes.scheme-1.settings.shadow | color_extract: 'blue' }}, {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-hero-banner-button-primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_color }};
    color: {{ block.settings.primary_button_text_color }};
    border-color: {{ block.settings.primary_button_color }};
  }

  .ai-hero-banner-button-primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_color }};
    color: {{ block.settings.primary_button_hover_text_color }};
    border-color: {{ block.settings.primary_button_hover_color }};
  }

  .ai-hero-banner-button-secondary-{{ ai_gen_id }} {
    background-color: transparent;
    color: {{ block.settings.secondary_button_text_color }};
    border-color: {{ block.settings.secondary_button_text_color }};
  }

  .ai-hero-banner-button-secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_text_color }};
    color: {{ block.settings.secondary_button_hover_text_color }};
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.height_mobile }}px;
    }

    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size | times: 0.8 }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    }

    .ai-hero-banner-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size | times: 0.9 }}px * {{ settings.body_scale | divided_by: 100.0 }});
    }

    .ai-hero-banner-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size | times: 0.9 }}px * {{ settings.body_scale | divided_by: 100.0 }});
    }

    .ai-hero-banner-buttons-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
    }

    .ai-hero-banner-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div
  class="ai-hero-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-hero-banner-image-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
    >
  {% else %}
    <div class="ai-hero-banner-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
  {% endif %}

  {% if block.settings.overlay_opacity > 0 %}
    <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-banner-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <h2 class="ai-hero-banner-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-hero-banner-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}

    {% if block.settings.primary_button_text != blank or block.settings.secondary_button_text != blank %}
      <div class="ai-hero-banner-buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_text != blank %}
          <a
            href="{{ block.settings.primary_button_link | default: '#' }}"
            class="ai-hero-banner-button-{{ ai_gen_id }} ai-hero-banner-button-primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_button_text }}
          </a>
        {% endif %}

        {% if block.settings.secondary_button_text != blank %}
          <a
            href="{{ block.settings.secondary_button_link | default: '#' }}"
            class="ai-hero-banner-button-{{ ai_gen_id }} ai-hero-banner-button-secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>

  {% unless block.settings.background_image %}
    <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
      Add a background image to complete your hero banner
    </div>
  {% endunless %}
</div>

