{% doc %}
  @prompt
    a hero banner, make the hero banner minimal a small section , remove the shop now button as it already exists
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.height_desktop }}px;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_gradient != blank %}
      background: {{ block.settings.background_gradient }};
    {% endif %}
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px 0;
  }

  .ai-hero-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-hero-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.2;
  }

  .ai-hero-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-hero-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    max-width: {{ settings.page_width }}px;
    width: 100%;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-heading-{{ ai_gen_id }} {
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: calc({{ block.settings.heading_size }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    line-height: 1.3;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-text-{{ ai_gen_id }} {
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc({{ block.settings.text_size }}px * {{ settings.body_scale | divided_by: 100.0 }});
    line-height: 1.5;
    margin: 0;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.height_mobile }}px;
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px 0;
    }

    .ai-hero-banner-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size | times: 0.8 }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    }

    .ai-hero-banner-text-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.text_size | times: 0.9 }}px * {{ settings.body_scale | divided_by: 100.0 }});
    }
  }
{% endstyle %}

<div
  class="ai-hero-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 1200 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-hero-banner-image-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
    >
  {% else %}
    <div class="ai-hero-banner-placeholder-{{ ai_gen_id }}">
      {{ 'image' | placeholder_svg_tag }}
    </div>
  {% endif %}

  {% if block.settings.overlay_opacity > 0 %}
    <div class="ai-hero-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-hero-banner-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-hero-banner-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>

  {% unless block.settings.background_image %}
    <div class="ai-hero-banner-empty-state-{{ ai_gen_id }}">
      Add a background image
    </div>
  {% endunless %}
</div>

{% schema %}
{
  "name": "Hero banner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 20
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "min": 150,
      "max": 400,
      "step": 25,
      "unit": "px",
      "label": "Desktop height",
      "default": 250
    },
    {
      "type": "range",
      "id": "height_mobile",
      "min": 120,
      "max": 300,
      "step": 20,
      "unit": "px",
      "label": "Mobile height",
      "default": 200
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 20
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Discover our collection</p>"
    },
    {
      "type": "range",
      "id": "content_spacing",
      "min": 8,
      "max": 24,
      "step": 4,
      "unit": "px",
      "label": "Content spacing",
      "default": 12
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 28
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 14,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f3f3f3"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}